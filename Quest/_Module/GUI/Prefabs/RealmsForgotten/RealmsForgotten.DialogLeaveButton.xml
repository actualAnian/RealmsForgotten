<Prefab>

  <Constants>
    <Constant Name="Standard.DialogCloseButtons.DoneButton.Width" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.DoneButton" BrushValueType="Width" />
    <Constant Name="Standard.DialogCloseButtons.DoneButton.Height" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.DoneButton" BrushValueType="Height" />
  </Constants>

  <Parameters>
    <Parameter Name="ShowDone" DefaultValue="true" />
    <Parameter Name="DoneButtonText" DefaultValue="- Missing -" />
    <Parameter Name="DoneButtonAction" DefaultValue="" />

    <Parameter Name="NavigationScopeMovements" DefaultValue="Horizontal" />
    <Parameter Name="DoneButtonNavigationIndex" DefaultValue="-1" />

    <Parameter Name="DoneInputKeyDataSource" DefaultValue="" />

    <Parameter Name="IsDoneEnabled" DefaultValue="true" />
  </Parameters>

  <Window>
    <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Bottom">
      <Children>
        <NavigationScopeTargeter ScopeID="DialogCloseButtonsScope" ScopeParent="..\." ScopeMovements="*NavigationScopeMovements" HasCircularMovement="true" />
        <ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Standard.DialogCloseButtons.DoneButton.Width" SuggestedHeight="!Standard.DialogCloseButtons.DoneButton.Height" Brush="Standard.DialogCloseButtons.DoneButton" Command.Click="*DoneButtonAction" IsEnabled="*IsDoneEnabled" IsVisible="*ShowDone" UpdateChildrenStates="true" GamepadNavigationIndex="*DoneButtonNavigationIndex"> 
          <Children>
            <TextWidget DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" PositionYOffset="13" Brush="Standard.DialogCloseButtons.ButtonText" Text="*DoneButtonText">
              <Children>
                <InputKeyVisualWidget DataSource="*DoneInputKeyDataSource" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="48" SuggestedHeight="48" HorizontalAlignment="Left" VerticalAlignment="Center" PositionXOffset="-44" KeyID="@KeyID" IsVisible="@IsVisible"/>
              </Children>
            </TextWidget>
          </Children>
        </ButtonWidget>
      </Children>
    </ListPanel>
  </Window>

</Prefab>